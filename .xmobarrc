Config { 
         font     =   "xft: Fira Sans:size=7:antialias=true"
       , bgColor  = "#282828"
       , fgColor  = "#ebdbb2"
       , alpha    = 255
       , position = TopP 0 0
       , allDesktops = True
       , commands = [ 

                      Run MultiCpu         [ "--template" , "Cpu: <total0>/<total1>%"
                             , "--Low"      , "50"         -- units: %
                             , "--High"     , "85"         -- units: %
                             , "--low"      , "#b8bb26"
                             , "--normal"   , "orange"
                             , "--high"     , "#fb4934"
                             ] 10
                    , Run CoreTemp         [ "--template" , "Temp: <core0>/<core1>°C"
                             , "--Low"      , "50"        -- units: °C
                             , "--High"     , "80"        -- units: °C
                             , "--low"      , "#b8bb26"
                             , "--normal"   , "orange"
                             , "--high"     , "#fb4934"
                             ] 50
                    , Run Memory           [ "--template" ,"Mem: <usedratio>%"
                             , "--Low"      , "60"        -- units: %
                             , "--High"     , "90"        -- units: %
                             , "--low"      , "#b8bb26"
                             , "--normal"   , "orange"
                             , "--high"     , "#fb4934"
                             ] 10
                    , Run Battery        [ "--template" , "<acstatus> <left>%"
                             , "--Low"      , "10"        -- units: %
                             , "--High"     , "80"        -- units: %
                             , "--low"      , "#fb4934"
                             , "--normal"   , "orange"
                             , "--high"     , "#b8bb26"

                             , "--" -- battery specific options
                                       -- discharging status
                                       , "-o"	, "Bat:"
                                       -- AC "on" status
                                       , "-O"	, "<fc=#b8bb26>AC:</fc>"
                                       -- charged status
                                       , "-i"	, "<fc=#83a598> Chrd </fc>"
                             ] 10
                    , Run Network "wlp3s0" ["-t","<rx>/<tx>kB/s"
                             , "--Low"      , "1000"       -- units: B/s
                             , "--High"     , "5000"       -- units: B/s
                             , "--low"      , "#b8bb26"
                             , "--normal"   , "#b8bb26"
                             , "--high"     , "#b8bb26"
                             ] 10
                    , Run Network "enp2s0" ["-L","0","-H","1000","--normal","white","--high","#b8bb26"] 10
                    , Run Wireless "wlp3s0" ["-t","<essid>[<quality>]","-L","30","--low","#fb4934"] 50
                    , Run DiskU [("/home", "Hdd: <free>")] [
                               "--Low"      , "0"
                             , "--High"     , "20"
                             , "--low"      , "#fb4934"
                             , "--normal"   , "#b8bb26"
                             , "--high"     , "#b8bb26"
                             ] 10
                    , Run Com "/home/newton/.myscripts/chup" [""] "upds" 60
                    , Run Kbd [("us", "US"), ("ru(winkeys)", "RU")]
                    , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
                    ]

       , sepChar = "%"
       , alignSep = "}{"
       , template = "%multicpu% %coretemp% || %memory% || %disku% || %battery% || %enp2s0% <fc=#83a598>%wlp3s0wi%:</fc>%wlp3s0% }\
                    \{<fc=#b8bb26></fc> %kbd% || <fc=#fb4934>%date%</fc>"
       }

